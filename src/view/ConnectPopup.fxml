<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="172.0" prefWidth="402.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="connectServerBtn" mnemonicParsing="false" onAction="#handleConnect" text="Connect to Server" />
            <Button fx:id="backToMain" mnemonicParsing="false" onAction="#closeConnectWindow" text="Back" />
        </buttons>
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <left>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="124.0" prefWidth="114.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="25.0" prefWidth="150.0" text="IP Address">
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
            <Label maxHeight="30.0" prefHeight="30.0" prefWidth="166.0" text="Port">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </left>
   <right>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="124.0" prefWidth="288.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="simServerIp" maxHeight="30.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets bottom="10.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="simServerPort" maxHeight="30.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets right="20.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="connectDataErrorMsg" prefHeight="17.0" prefWidth="266.0" textFill="RED" translateY="10.0" />
         </children>
      </VBox>
   </right>
</BorderPane>
